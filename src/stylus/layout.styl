/**
 * Layout
 */

$headerHeight = 45px;

.layout
  margin 0
  padding 0
  font normal 14px/1.5 'PT Sans', sans-serif;

  &__header
    height $headerHeight
    position relative
    z-index 2

  &__page
    position relative
    z-index 1

  &__footer
    position relative
    z-index 2


.text-link
  color #fff
