/**
 * Layout
 */

$headerHeight = 45px;

.layout
  min-width: $pageWidth + 2 * $pagePadding
  margin: 0
  padding: 0
  font: 400 14px/1.5 $fontFamilySans

  &__header
    height: $headerHeight
    position: relative
    z-index: 2

  &__page
    position: relative
    z-index: 1

  &__footer
    position: relative
    z-index: 2


.text-link
  color: #fff
