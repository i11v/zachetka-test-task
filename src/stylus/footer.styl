/**
 * Footer block
 */

.footer
  background #404040
  padding 30px 0

  &__links
    width $pageWidth
    margin 0 auto 30px
    text-align justify

    &:after
      display inline-block
      size 100% 0
      visibility hidden
      content ''

  &__menu
    display inline-block
    vertical-align top

  &__info
    width $pageWidth
    margin 0 auto
    padding 20px 0 0
    border-top 1px solid #a9a9a9

  &__text
    margin 0
    text-align center
    color #fff
