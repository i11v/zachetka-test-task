/**
 * Forms
 */

$inputWidth = 310px
$inputHeight = 35px
$labelWidth = 200px

.register-form
  text-align: center

  &__row
    margin 0 0 10px

    &-wrapper
      width: $inputWidth
      margin: 0 auto
      position: relative
      text-align: left

  &__header
    color: #4e4f4f
    font-size: 30px
    font-weight: 400

  &__label
    width: $labelWidth
    position: absolute
    left: -($labelWidth + 15px)
    line-height: $inputHeight
    text-align: right
    font-weight: 700

    &_inline
      display: inline-block
      margin-right: 10px
      position: static
      line-height: $inputHeight
      vertical-align: middle

  &__input
    height: $inputHeight
    margin: 0 5px 0 0
    vertical-align: middle
    font: 400 14px/35px $fontFamilySans

    &_text
      width: $inputWidth
      padding: 0 10px
      box-sizing: border-box
      border: 1px solid #cfcfcf
      font-size: 14px
      color: #828282
      outline: none

      &:active
      &:focus
        border-color: #828283
        color: #4e4f4f

      .error &
        border-color: #d25050

  &__info
    color: #8a8a8a

  &__err-msg
    $errMsgWidth = 200px
    display: none // hide by default
    width: $errMsgWidth
    position: absolute
    top: 0
    right: -($errMsgWidth + 10px)
    line-height: $inputHeight
    color: #f00
    font-weight: 700

    .error &
      display: inline-block
